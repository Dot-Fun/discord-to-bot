{
  "version": "1.0.0",
  "channelId": "1356680542489415902",
  "channelName": "jira-updates",
  "inherits": "base-context.json",
  "purpose": "Automated JIRA update notifications",
  "context": {
    "jira": {
      "instance": "https://dotfun.atlassian.net",
      "defaultProject": "DOT",
      "notificationTypes": [
        "issue_created",
        "issue_updated",
        "issue_transitioned",
        "comment_added",
        "sprint_started",
        "sprint_completed"
      ]
    },
    "automation": {
      "postUpdates": true,
      "mentionAssignee": true,
      "includeLinks": true
    },
    "formatting": {
      "useEmbeds": true,
      "colorCoding": {
        "created": "#00FF00",
        "updated": "#0099FF",
        "completed": "#9932CC",
        "blocked": "#FF0000"
      }
    }
  },
  "quickResponses": {
    "ticketCreated": "âœ… New ticket created: {key} - {summary}",
    "ticketUpdated": "ğŸ“ Ticket updated: {key}",
    "ticketCompleted": "ğŸ‰ Ticket completed: {key}",
    "sprintStarted": "ğŸš€ Sprint {name} has started!"
  }
}